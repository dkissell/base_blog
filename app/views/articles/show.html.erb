<h1><%= @article.title %></h1>

Tags: <%= tag_links(@article.tags) %><br />
<p>
<% if @article.image_file_name %>
        <%= image_tag @article.image.url %><br/>
    <% end %>
</p>
  <p><%= @article.body %></p>
  <ul>
    <li>  <%= link_to "edit", edit_article_path(@article)%> <li>
    <li>  <%= link_to "delete", article_path(@article), :method => :delete, :confirm => "Really delete?" %> </li>
  </ul>
  <h4>Comments (<%= @article.comments.size  %>)</h4>
  <%= render :partial => 'comment', :collection => @article.comments %>
  <%= render :partial => 'comment_form'%>
  <p><%= link_to "Back to Articles List", articles_path %></p>
